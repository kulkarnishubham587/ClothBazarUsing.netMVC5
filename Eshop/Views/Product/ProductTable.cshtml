@model List<ClothBazar.Entities.Product>
@{
    ViewBag.Title = "ProductTable";
}
<div>
    <form  method="post">
        <input name="search" />
        <button>
            Search
        </button>
        <button>
            New
        </button>
    </form>
</div>
<h2>ProductTable</h2>

<table>
    <thead>
        <tr>
            <td>
                Product Name
            </td>
            <td>
                category
            </td>
            <td>
                price
            </td>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <button>Edit</button>
                    <button>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>