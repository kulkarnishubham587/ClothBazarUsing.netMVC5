@model ClothBazar.Entities.Product
@{
    ViewBag.Title = "Delete";
}

<h1 style="margin:auto;width:300px">Delete</h1>

<form method="post">
    <h3 class="text-danger">Are you sure u want to delete this Product with name @Model.Name</h3>
    <input type="hidden" name="ID" value="@Model.ID " />


    </br>
    <a class="btn btn-warning" href="/product/Index">Cancel</a>
    <button style="margin-left:500px" class="btn btn-danger" type="submit">Yes Delete</button>

</form>


